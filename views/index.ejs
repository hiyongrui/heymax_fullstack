<!DOCTYPE html>
<html>
<head>
  <title>Ecommerce application</title>
</head>
<body>
  <h1> Test App </h1>

  <div>
    <ul>
        <% products.forEach(function(item) { %>
            <li>
            <span><%= item.name %></span>
            <button type="button" onclick="del('<%= item.productID %>');">Delete</button>
            </li>
        <% }); %>
    </ul>
  </div>

  <script>
    
    function del(id) {
        console.log("deleting this ", id);
        fetch('/delete/' + id, {
            method: 'POST',
        }).then(response => console.log(response))
    }
    
    </script>

</body>
</html>

